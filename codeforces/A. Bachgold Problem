#include <iostream>
#include <cstdlib>
#include <string>

using namespace std;

int main()
{
	string input;
	cin >> input;

	int num = atoi(input.c_str());
	int num_2 = 0;
	
	if (num % 2 == 0) {
		cout << num / 2 << endl;
		num_2 = num / 2;	
	} else {
		num_2 = num / 2 - 1;
		cout << num_2 + 1 << endl;
		cout << "3 ";
	}
	
	for (int i = 0; i < num_2; i++) {
		cout << "2 ";	
	}
	
	return 0;
}
