#include <iostream>

using namespace std;

int main()
{
    int n;
    cin >> n;
    
    int x, y;
    int left = 0, right = 0;
    while(cin >> x >> y) {
        if ( x < 0) {
            left += 1;
        } else {
            right += 1;
        }
    }
    
    if (left > 1 && right > 1) {
        cout << "No" << endl;
    } else {
        cout << "Yes" << endl;
    }
}
